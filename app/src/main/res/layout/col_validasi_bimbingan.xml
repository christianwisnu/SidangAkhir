<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/cardstore"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtColValidasiBimbinganJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JUDUL"
                android:textSize="17dp"
                android:textColor="@color/md_black" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/txtColValidasiBimbinganNBIdanNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NBI dan Nama"
                android:textSize="15dp"
                android:textColor="@color/md_black" />

            <TextView
                android:id="@+id/txtColValidasiBimbinganNikdanNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nik dan Nama"
                android:textSize="15dp"
                android:textColor="@color/md_black" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="-20dp">

        <TextView
            android:id="@+id/txtColValidasiBimbinganId"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/cardcyclewhite"
            android:gravity="center"
            android:text="10"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imgColValidasiBimbingan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/slctcyclewhitecard"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_action_tick_black" />

    </LinearLayout>

</LinearLayout>

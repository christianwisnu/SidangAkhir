<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/md_blue_900"
        android:layout_height="@dimen/actionbar_dimen">

        <ImageView
            android:layout_width="@dimen/actionbar_dimen"
            android:layout_height="@dimen/actionbar_dimen"
            android:scaleType="centerInside"
            android:id="@+id/imgUploadBimbinganBack"
            android:src="@mipmap/ic_action_arrow_left" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/White_Snow"
            android:text="Upload Bukti Lembar Bimbingan"
            android:textSize="16dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_margin="@dimen/MarginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgBuktiBimbingan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cameraicon"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnUploadBimbingan"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/slctdefaultbutton"
                android:text="PROSES"
                android:textColor="@color/md_white"
                android:textSize="20dp" />

            <TextView
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/txtMessageBimbingan"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/md_red_a700"
                android:textStyle="bold"
                android:textSize="17dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>